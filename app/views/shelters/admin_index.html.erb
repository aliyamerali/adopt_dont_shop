<h2>All Shelters</h2>

<% @shelters.each do |shelter| %>
  <h5><%= link_to shelter.name, "/admin/shelters/#{shelter.id}"%></h5>
  <ul>
    <li>City: <%= shelter.city %></li>
    <li>Foster Program? <%= shelter.foster_program %> </li>
    <li>Rank: <%=shelter.rank %> </li>
  </ul>
<% end %>

<h2>Shelters with Pending Applications</h2>
<ul class="shelters-with-pending">
<% @shelters_with_pending.each do |shelter| %>
    <li> <%= shelter.name %> </li>
<% end %>
</ul>
